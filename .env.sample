# Sample environment variables for local development
# Copy this file to `.env` and fill in real values. Do NOT commit secrets to source control.

# Required: Azure AI / Foundry project endpoint
AZURE_AI_PROJECT_ENDPOINT="https://your-project-endpoint"

# Required: Model deployment name used by your project (deployment name in Azure AI)
AZURE_AI_MODEL_DEPLOYMENT_NAME="your-model-deployment-name"

# Optional: Bing Grounding connection (needed only if using Bing grounding in samples)
# Format example: "/subscriptions/{sub}/resourceGroups/{rg}/providers/Microsoft.CognitiveServices/accounts/{account}/projects/{project}/connections/{connection}"
# BING_CONNECTION_ID="/subscriptions/.../resourceGroups/.../providers/.../connections/..."

# MCP server URL for Hosted MCP (local Azure Functions default port 7071)
MCP_SERVER_URL="http://localhost:7071/api/mcp"


AGENT_FRAMEWORK_MODE="framework"
APPLICATIONINSIGHTS_CONNECTION_STRING=""